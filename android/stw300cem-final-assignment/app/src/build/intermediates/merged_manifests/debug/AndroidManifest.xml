        <activity android:name="com.example.bookcarservicing.Controllers.Registration" />
        <activity android:name="com.example.bookcarservicing.Controllers.Login" />
        <activity
            android:name="com.example.bookcarservicing.Controllers.SplashScreen"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>